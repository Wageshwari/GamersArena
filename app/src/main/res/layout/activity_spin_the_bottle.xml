<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".SpinTheBottle"
    android:id="@+id/view"
    android:scaleType="fitXY"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/spinback"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/stbLayout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:layout_centerInParent="true"
        android:visibility="visible">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="#663300"
        android:fontFamily="serif"
        android:textSize="30dp"
        android:text="Choose no of players"
        android:gravity="center" />


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

         <ImageView
             android:id="@+id/stbDown"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:background="@drawable/spindown"
             android:alpha="0.8"
             android:layout_weight="1"/>

         <TextView
             android:id="@+id/stbTotalPlayer"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:textStyle="bold"
             android:textColor="#8b5a2b"
             android:fontFamily="serif"
             android:textSize="60dp"
             android:text="2"
             android:gravity="center"
             android:layout_weight="1"/>

         <ImageView
           android:id="@+id/stbUp"
             android:layout_height="match_parent"
          android:layout_width="match_parent"
         android:background="@drawable/spinup"
          android:layout_weight="1"/>

</LinearLayout>

        <ImageView
            android:id="@+id/stbPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:src="@drawable/startstb" />

</LinearLayout>


    <RelativeLayout
        android:id="@+id/stbLayout2"
        android:layout_width="300.0dip"
        android:layout_height="300.0dip"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/stbBackground"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/spinbotback2"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/stbottle"
            android:layout_width="60.0dip"
            android:layout_height="180.0dip"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/spinbot" />

    </RelativeLayout>


</RelativeLayout>