<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="#042b04"
    android:layout_height="fill_parent"
    android:padding="20dp"
    tools:context=".ColGameLv">

    <Button
        android:id="@+id/got"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editfield"
        android:textColor="@color/yellow"
        android:textSize="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="210dp"
        android:onClick="gotit"
        android:text="GOT IT" />


    <ImageView
        android:id="@+id/rulecolgame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/black"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/rulescolgame"
        tools:layout_height="match_parent"
        tools:layout_width="match_parent" />

    <ImageView
        android:id="@+id/colgamebackground"
        android:layout_width="match_parent"
        android:layout_height="479dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/collvback" />

    <LinearLayout
        android:layout_width="258dp"
        android:layout_height="45dp"
        android:id="@+id/line1"
        android:layout_marginTop="230dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lv1"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp" android:visibility="gone"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="LEVEL 1"
            android:onClick="level1"
            android:textAlignment="center"
            android:textColor="#369436"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lv1unlock"
            android:layout_width="72dp"
            android:layout_height="match_parent" android:visibility="gone"
            android:layout_weight="1"
            app:srcCompat="@drawable/umlock" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/line2"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lv2"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv1"
            android:layout_weight="1"
            android:onClick="level2"
            android:enabled="false"
            android:visibility="gone"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="LEVEL 2"
            android:textAlignment="center"
            android:textColor="#369436"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lv2lock"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_marginBottom="161dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lockcol" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:id="@+id/line3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="88dp"
        android:layout_marginTop="330dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lv3"
            android:layout_width="174dp"
            android:layout_height="51dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_weight="1"
            android:onClick="level3"
            android:enabled="false"
            android:text="LEVEL 3"
            android:textAlignment="center"
            android:textColor="#369436"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lv3lock"
            android:layout_width="66dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_weight="1"
            app:srcCompat="@drawable/lockcol" />
    </LinearLayout>

</RelativeLayout>